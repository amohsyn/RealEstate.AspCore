<nav-button page="@(User.Identity.IsAuthenticated ? typeof(Manage.IndexModel).Page() : "/Index")" icon="~/icons/statistics.svg" subject="@(User.Identity.IsAuthenticated ? SharedLocalizer["Statistics"] : SharedLocalizer["HomePage"])" />
@* <nav-button page="/@nameof(Manage)/@nameof(Manage.Notification)/Index" icon="~/icons/notification.svg" subject="@SharedLocalizer["Notifications"]"></nav-button> *@

@if (User.Identity.IsAuthenticated)
{
    <nav-button icon="~/icons/deal.svg" subject="@SharedLocalizer["Items"]">
        @if (User.IsInRole(Role.Admin.ToString()) || User.IsInRole(Role.SuperAdmin.ToString()))
        {
            <nav-button page="@typeof(Manage.Item.IndexModel).Page()" icon="~/icons/deal.svg" subject="@SharedLocalizer["List"]" />
            <nav-button page="@typeof(Manage.Property.IndexModel).Page()" icon="~/icons/property.svg" subject="@SharedLocalizer["Properties"]" />
        }
    </nav-button>

    if (User.IsInRole(Role.SuperAdmin.ToString()))
    {
        <nav-button icon="~/icons/property.svg" subject="@SharedLocalizer["Deals"]">
            <nav-button page="@typeof(Manage.Deal.IndexModel).Page()" icon="~/icons/deal.svg" subject="@SharedLocalizer["List"]" />
            <nav-button page="@typeof(Manage.ItemRequest.IndexModel).Page()" icon="~/icons/dealstatus.svg" subject="@SharedLocalizer["ItemRequests"]" />
        </nav-button>
    }

    if (User.IsInRole(Role.Admin.ToString()) || User.IsInRole(Role.SuperAdmin.ToString()))
    {
        <nav-button icon="~/icons/persons.svg" subject="@SharedLocalizer["Settings"]">
            <nav-button page="@typeof(Manage.Facility.IndexModel).Page()" icon="~/icons/possibility.svg" subject="@SharedLocalizer["Facilities"]" />
            <nav-button page="@typeof(Manage.District.IndexModel).Page()" icon="~/icons/map.svg" subject="@SharedLocalizer["Districts"]" />
            <nav-button page="@typeof(Manage.Feature.IndexModel).Page()" icon="~/icons/features.svg" subject="@SharedLocalizer["Features"]" />
            <nav-button page="@typeof(Manage.Category.IndexModel).Page()" icon="~/icons/features.svg" subject="@SharedLocalizer["Categories"]" />
        </nav-button>

    }

    <nav-button icon="~/icons/persons.svg" subject="@SharedLocalizer["Persons"]">
        <nav-button page="@typeof(Manage.Applicant.IndexModel).Page()" icon="~/icons/persons.svg" subject="@SharedLocalizer["Applicants"]"></nav-button>
        <nav-button page="@typeof(Manage.Contact.IndexModel).Page()" icon="~/icons/persons.svg" subject="@SharedLocalizer["Contacts"]"></nav-button>
    </nav-button>

    if (User.IsInRole(Role.Admin.ToString()) || User.IsInRole(Role.SuperAdmin.ToString()))
    {
        <nav-button icon="~/icons/persons.svg" subject="@SharedLocalizer["Management"]">

            <nav-button page="@typeof(Manage.Payment.IndexModel).Page()" icon="~/icons/financial.svg" subject="@SharedLocalizer["Financial"]"></nav-button>
            <nav-button page="@typeof(Manage.User.IndexModel).Page()" icon="~/icons/user.svg" subject="@SharedLocalizer["Users"]"></nav-button>
        </nav-button>

    }
}