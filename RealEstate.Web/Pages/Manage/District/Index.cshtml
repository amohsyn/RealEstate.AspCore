@page
@model IndexModel
<div class="col-12">
    <status>
        @Model.Status
    </status>
    <div class="widget">
        <widget-header title="@Model.PageTitle">
            <a asp-page="@typeof(AddModel).Page()">@SharedLocalizer["NewDistrict"]</a>
        </widget-header>
        <section class="container-fluid">
            <search-pane is-under-condition="@Model.SearchInput.IsTriggered">
                <form method="post" class="search">
                    <div class="row justify-content-center align-items-center">
                        <input asp-for="SearchInput.PageNo" />
                        <div class="col-xs-12 col-md">
                            <div class="input-wrapper">
                                <label class="control-label" asp-for="SearchInput.Name"></label>
                                <input asp-for="SearchInput.Name" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <vc:admin-search-condition model="@Model.SearchInput" />
                </form>
            </search-pane>
            <item-viewer model="@Model.List.Items">
                @foreach (var item in Model.List.Items)
                {
                    var disabledClass = item.IsDeleted ? "disabled" : "";
                    var disabledTerm = item.IsDeleted ? SharedLocalizer["Undelete"] : SharedLocalizer["Delete"];
                    <div class="row justify-content-center itemShow @disabledClass">
                        <div class="col-12 detail">
                            <div class="info">
                                <span>
                                    <b class="title">
                                        @item.Name
                                    </b>
                                    <a class="badge badge-primary" asp-page="@typeof(Item.IndexModel).Page()" target="_blank" asp-route-district="@item.Name">@SharedLocalizer[SharedResource.AvailableItems]</a>
                                </span>
                            </div>
                            <div class="button">
                                @if (User.IsInRole(Role.SuperAdmin.ToString()) || User.IsInRole(Role.Admin.ToString()))
                                {
                                    <a asp-page="/@nameof(Manage)/@nameof(District)/Add" asp-route-id="@item.Id" class="btn btn-sm btn-warning @disabledClass">@SharedLocalizer["Edit"]</a>
                                    <a asp-controller="Remove" asp-action="DistrictAsync" asp-route-id="@item.Id" data-confirm="@SharedLocalizer[" AreYouSureToDoThisRequest"]" class="btn btn-sm btn-danger">@disabledTerm</a>
                                }
                            </div>
                        </div>
                        <vc:log logs="@item.Logs" cat="District" id="@item.Id" />
                    </div>
                }
            </item-viewer>
            <vc:pagination model="@Model.List" />
        </section>
    </div>
</div>