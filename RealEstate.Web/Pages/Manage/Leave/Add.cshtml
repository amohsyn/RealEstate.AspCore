@page
@model AddModel

@{
    var employees = await EmployeeService.ListAsync().ConfigureAwait(false);
    var emploo = employees?.Select(x => new SelectListItem
    {
        Value = x.Id,
        Text = $"{x.FirstName} {x.LastName}",
        Selected = Model.NewLeave?.EmployeeId == x.Id
    });
}
<form method="post" class="col-12">
    <div class="widget">
        <widget-header title="@Model.PageTitle"></widget-header>
        <input asp-for="NewLeave.Id" />
        <section class="container-fluid">
            <div class="row justify-content-center align-items-center">

                <div class="col-12 margin-bottomed">
                    <label asp-for="NewLeave.EmployeeId" class="control-label"></label>
                    <select asp-items="emploo" asp-for="NewLeave.EmployeeId" class="form-control"></select>
                    <span asp-validation-for="NewLeave.EmployeeId" class="text-danger"></span>
                </div>

            </div>
            <div class="row justify-content-center align-items-center">
                <div class="col-xs-12 col-6 margin-bottomed">
                    <label asp-for="NewLeave.FromDate" class="control-label"></label>
                    <input asp-for="NewLeave.FromDate" class="form-control" />
                    <span asp-validation-for="NewLeave.FromDate" class="text-danger"></span>
                </div>
                <div class="col-xs-12 col-6 margin-bottomed">
                    <label asp-for="NewLeave.FromHour" class="control-label"></label>
                    <input asp-for="NewLeave.FromHour" class="form-control" />
                    <span asp-validation-for="NewLeave.FromHour" class="text-danger"></span>
                </div>
                <div class="col-xs-12 col-6 margin-bottomed">
                    <label asp-for="NewLeave.ToDate" class="control-label"></label>
                    <input asp-for="NewLeave.ToDate" class="form-control" />
                    <span asp-validation-for="NewLeave.ToDate" class="text-danger"></span>
                </div>
                <div class="col-xs-12 col-6 margin-bottomed">
                    <label asp-for="NewLeave.ToHour" class="control-label"></label>
                    <input asp-for="NewLeave.ToHour" class="form-control" />
                    <span asp-validation-for="NewLeave.ToHour" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row justify-content-center align-items-center">
                <div class="col-12 margin-bottomed">
                    <label asp-for="NewLeave.Reason" class="control-label"></label>
                    <textarea asp-for="NewLeave.Reason" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="NewLeave.Reason" class="text-danger"></span>
                </div>
            </div>
        </section>
        <widget-footer>
            <widget-footer-text>
                <div asp-validation-summary="All">
                    @Model.LeaveStatus
                </div>
            </widget-footer-text>
            <widget-footer-button>
                <input type="submit" value="@SharedLocalizer["Submit"]" class="btn-success" />
            </widget-footer-button>
        </widget-footer>
    </div>
</form>