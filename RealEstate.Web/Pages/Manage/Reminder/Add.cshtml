@page
@model AddModel

<form method="post" class="col-12">
    <div class="widget">
        <widget-header title="@Model.PageTitle"></widget-header>
        <input asp-for="NewReminder.Id" />
        <section class="container-fluid">
            <div class="row justify-content-center align-items-center">
                <div class="col-xs-12 col-6 margin-bottomed">
                    <label asp-for="NewReminder.Description" class="control-label"></label>
                    <input asp-for="NewReminder.Description" class="form-control" />
                    <span asp-validation-for="NewReminder.Description" class="text-danger"></span>
                </div>
                <div class="col-xs-12 col-6 margin-bottomed">
                    <label asp-for="NewReminder.Date" class="control-label"></label>
                    <input asp-for="NewReminder.Date" class="form-control" />
                    <span asp-validation-for="NewReminder.Date" class="text-danger"></span>
                </div>
            </div>
        </section>
        <footer>
            <submit full-width="true" />
            <status>
                @Model.Status
            </status>
        </footer>
    </div>
</form>