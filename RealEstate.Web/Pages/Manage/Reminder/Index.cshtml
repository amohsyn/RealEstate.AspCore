@page
@model IndexModel

<status>
    @Model.Status
</status>
<div class="col-12">
    <div class="widget">
        <widget-header title="@Model.PageTitle">
            <a asp-page="@typeof(AddModel).Page()">@SharedLocalizer[SharedResource.NewReminder]</a>
        </widget-header>
        <section class="container-fluid">
            <search-nav searchModel="@Model.SearchInput" rows="@Model.List.Rows"></search-nav>
            <div class="row justify-content-center align-items-center text-right margin-bottomed">
                <div class="col-12">
                    <h6>رنگ زرد: فردا</h6>
                    <h6>رنگ سبز: امروز</h6>
                </div>
            </div>

            <item-viewer model="@Model.List.Items">
                @foreach (var item in Model.List.Items)
                {
                    var disabledClass = item.IsDeleted ? "disabled" : "";
                    var disabledTerm = item.IsDeleted ? SharedLocalizer["Undelete"] : SharedLocalizer["Delete"];

                    var isToday = item.Date.Date == DateTime.Today;
                    var isTomorrow = item.Date.Date == DateTime.Today.AddDays(1);

                    <div class="row justify-content-center itemShow @disabledClass @(isToday ? "today": "") @(isTomorrow ? "tomorrow" : "")">
                        <div class="col-12 detail">
                            <div class="info">
                                <span>
                                    <b class="title">
                                        @item.Description
                                    </b>
                                    <span class="badge badge-primary">@SharedLocalizer[SharedResource.RememberDeadline]: @item.Date.GregorianToPersian(true)</span>
                                </span>
                                @if (item.Price > 0)
                                {
                                    var price = Convert.ToDouble(item.Price);
                                    <span>
                                        @SharedLocalizer[SharedResource.Price] :
                                        <ul class="info-breadcrumb">
                                            <li>@price.ToString(CultureInfo.CurrentCulture).CurrencyToWords() تومان</li>
                                        </ul>
                                    </span>
                                }
                                @if (item.IsCheck)
                                {
                                    <span>
                                        مشخصات چک:
                                        <ul class="info-breadcrumb">
                                            @if (!string.IsNullOrEmpty(item.CheckBank))
                                            {
                                                <li>@SharedLocalizer[SharedResource.CheckBank]: @item.CheckBank</li>
                                            }

                                            @if (!string.IsNullOrEmpty(item.CheckNumber))
                                            {
                                                <li>@SharedLocalizer[SharedResource.CheckNumber]: @item.CheckNumber</li>
                                            }
                                        </ul>
                                    </span>
                                }
                                @if (item.Pictures?.Any() == true)
                                {
                                    <span>
                                        @SharedLocalizer[SharedResource.Photos]:
                                        <ul class="info-breadcrumb gallery no-image">
                                            @for (var index = 0; index < item.Pictures.Count; index++)
                                            {
                                                var picture = item.Pictures[index];
                                                var imgPath = Url.Content($"~/{FileHandler.ImgDirectory}/{picture.File}");

                                                <li>
                                                    <img class="hidden" src="@imgPath" alt="@picture.Text" />
                                                    @SharedLocalizer[SharedResource.Picture] @(index + 1)
                                                </li>
                                            }
                                        </ul>
                                    </span>
                                }
                            </div>
                            <div class="button">
                                @if (User.IsInRole(Role.SuperAdmin.ToString()) || User.IsInRole(Role.Admin.ToString()))
                                {
                                    <a asp-controller="Remove" asp-action="ReminderAsync" asp-route-id="@item.Id" data-confirm="@SharedLocalizer["AreYouSureToDoThisRequest"]" class="btn btn-sm btn-danger">@disabledTerm</a>
                                }
                            </div>
                        </div>
                        <vc:log logs="@item.Logs" cat="Reminder" id="@item.Id" />
                    </div>
                }
            </item-viewer>
            <vc:pagination model="@Model.List" />
        </section>
    </div>
</div>
<search-modal searchModel="@Model.SearchInput">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md margin-bottomed">
            <div class="input-wrapper">
                <label class="control-label" asp-for="SearchInput.Subject"></label>
                <input asp-for="SearchInput.Subject" class="form-control" />
            </div>
        </div>
        <div class="col-12 col-md margin-bottomed">
            <div class="input-wrapper">
                <label class="control-label" asp-for="SearchInput.CheckBank"></label>
                <input asp-for="SearchInput.CheckBank" class="form-control" />
            </div>
        </div>
        <div class="col-12 col-md margin-bottomed">
            <div class="input-wrapper">
                <label class="control-label" asp-for="SearchInput.CheckNumber"></label>
                <input asp-for="SearchInput.CheckNumber" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md margin-bottomed">
            <div class="input-wrapper">
                <label class="control-label" asp-for="SearchInput.Price"></label>
                <input type="tel" asp-for="SearchInput.Price" class="form-control" />
            </div>
        </div>
        <div class="col-12 col-md margin-bottomed">
            <div class="input-wrapper">
                <label class="control-label" asp-for="SearchInput.FromDate"></label>
                <input asp-for="SearchInput.FromDate" placeholder="@DateTime.Now.GregorianToPersian(true)" class="form-control" />
            </div>
        </div>
        <div class="col-12 col-md margin-bottomed">
            <div class="input-wrapper">
                <label class="control-label" asp-for="SearchInput.ToDate"></label>
                <input asp-for="SearchInput.ToDate" placeholder="@DateTime.Now.GregorianToPersian(true)" class="form-control" />
            </div>
        </div>
    </div>
</search-modal>
@section Styles
{
    <link rel="stylesheet" href="~/css/jquery.bsPhotoGallery-min.css" asp-append-version="true" />
}
@section Scripts
{
    <script src="~/js/jquery.bsPhotoGallery-min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.gallery').bsPhotoGallery({
                "classes": "",
                "hasModal": true
            });
        });
    </script>
}