                foreach (var item in Model.List.Items)
                {
                    <div class="row justify-content-center itemShow">
                        <div class="col-12 detail">
                            <div class="info">
                                <span>
                                    <b class="title">
                                        @item.Receiver
                                    </b>
                                    <span class="badge badge-primary">@item.ReferenceId</span>
                                </span>
                                <span>
                                    @item.Text
                                </span>
                            </div>
                        </div>
                        @if (User.IsInRole(Role.SuperAdmin.ToString()) || User.IsInRole(Role.Admin.ToString()))
                        {
                            <vc:log logs="@item.Logs"></vc:log>
                        }
                    </div>
                }
            }
            else
            {
                <div class="row justify-content-center align-items-center">
                    <h5>
                        @SharedLocalizer["NoItemToShow"]
                    </h5>
                </div>
            }
            <vc:pagination model="@Model.List"></vc:pagination>
        </section>
    </div>
