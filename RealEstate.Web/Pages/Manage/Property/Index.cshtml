@page
@model IndexModel
@{
    var districts = await LocationService.DistrictListAsync().ConfigureAwait(false);
    var districtsSelect = districts?.Select(x => new SelectListItem
    {
        Text = x.Name,
        Value = x.Name
    }).AddNone();

    var categorieslist = await FeatureService.CategoryListAsync(CategoryTypeEnum.Property, true).ConfigureAwait(false);
    var categories = (categorieslist?.Select(x => new SelectListItem
    {
        Value = x.Name,
        Text = x.Name
    }).ToList()).AddNone();
}
<div class="col-12">
    <div class="widget">
        <widget-header title="@Model.PageTitle" />
        <section class="container-fluid">

            <form method="post" class="search">
                <div class="row justify-content-center align-items-center">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a class="card-link" data-toggle="collapse" href="#search">
                                    @SharedLocalizer["Search"]
                                </a>
                                <a class="card-link clearSearch" asp-page="@typeof(IndexModel).Page()">
                                    @SharedLocalizer["ClearSearch"]
                                </a>
                            </div>
                            <div id="search" class="collapse @(Model.SearchInput.IsUnderCondition ? "show" : "")">
                                <div class="card-body">
                                    <div class="row justify-content-center align-items-center">
                                        <input asp-for="SearchInput.PageNo" />
                                        <div class="col-xs-12 col-md">
                                            <div class="input-wrapper">
                                                <label class="control-label" asp-for="SearchInput.Owner"></label>
                                                <input asp-for="SearchInput.Owner" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md">
                                            <div class="input-wrapper">
                                                <label class="control-label" asp-for="SearchInput.OwnerMobile"></label>
                                                <input asp-for="SearchInput.OwnerMobile" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md">
                                            <div class="input-wrapper">
                                                <label class="control-label" asp-for="SearchInput.Category"></label>
                                                <select asp-items="categories" asp-for="SearchInput.Category" class="custom-select"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center align-items-center">
                                        <div class="col-xs-12 col-md">
                                            <div class="input-wrapper">
                                                <label class="control-label" asp-for="SearchInput.District"></label>
                                                <select asp-items="districtsSelect" asp-for="SearchInput.District" class="custom-select"></select>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md">
                                            <div class="input-wrapper">
                                                <label class="control-label" asp-for="SearchInput.Street"></label>
                                                <input asp-for="SearchInput.Street" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <vc:admin-search-condition model="@Model.SearchInput" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @if (Model.List.Items?.Any() == true)
            {

                foreach (var item in Model.List.Items)
                {
                    var disabledClass = item.IsDeleted ? "disabled" : "";
                    var disabledTerm = item.IsDeleted ? SharedLocalizer["Undelete"] : SharedLocalizer["Delete"];
                    <div class="row justify-content-center itemShow @disabledClass">
                        <div class="col-12 detail">
                            <div class="info">
                                <ul class="info-breadcrumb">
                                    <li>
                                        <a asp-page="@typeof(District.IndexModel).Page()" asp-route-id="@item.District.Value?.Id" target="_blank">@item.District.Value?.Name</a>
                                    </li>
                                    <li>
                                        <a asp-page="@typeof(Category.IndexModel).Page()" asp-route-propertyCat="@item.Category.ToString()">@item.Category.Value?.Name</a>
                                    </li>
                                </ul>
                                <span>
                                    <b class="title">
                                        @item.Address
                                        @if (item.Pictures.Value?.Any() == true)
                                        {
                                            <i class="fa fa-check-circle verified"></i>
                                        }
                                    </b>
                                </span>
                                <span>
                                    @SharedLocalizer[SharedResource.Owners]:
                                    <ul class="info-breadcrumb">
                                        @if (item.CurrentPropertyOwnership()?.Ownerships.Value?.Any() != true)
                                        {
                                            <li>مالک ثبت نشده است</li>
                                        }
                                        else
                                        {
                                            if (item.CurrentPropertyOwnership().Ownerships.Value.Sum(x => x.Dong) != 6)
                                            {
                                                <li>خطا در ثبت تعداد دانگ ها</li>
                                            }
                                            else
                                            {
                                                @foreach (var owner in item.CurrentPropertyOwnership().Ownerships.Value)
                                                {
                                                    <li>
                                                        <a asp-page="@typeof(Customer.IndexModel).Page()" asp-route-id="@owner.Id" target="_blank">@owner.Customer.Value.Name - @owner.Customer.Value?.Mobile - @owner.Dong @SharedLocalizer["Dong"]</a>
                                                    </li>
                                                }
                                            }
                                        }
                                    </ul>
                                </span>

                                @if (item.PropertyFacilities.Value?.Any() == true)
                                {
                                    <span>
                                        @SharedLocalizer[SharedResource.PropertyFacilities] :
                                        <ul class="info-breadcrumb">
                                            @foreach (var feature in item.PropertyFacilities.Value)
                                            {
                                                <text>
                                                    <li>@feature.Facility.Value?.Name</li>
                                                </text>
                                            }
                                        </ul>
                                    </span>

                                }
                                @if (item.PropertyFeatures.Value?.Any() == true)
                                {
                                    <span>
                                        @SharedLocalizer[SharedResource.PropertyFeatures] :
                                        <ul class="info-breadcrumb">
                                            @foreach (var feature in item.PropertyFeatures.Value)
                                            {
                                                <text>
                                                    <li>@feature.Feature.Value?.Name.TranslateFeature(feature.Value)</li>
                                                </text>
                                            }
                                        </ul>
                                    </span>

                                }
                                @if (item.Pictures.Value?.Any() == true)
                                {
                                    <span>
                                        @SharedLocalizer[SharedResource.Photos] :
                                        <ul class="info-breadcrumb gallery no-image">
                                            @for (var i = 0; i < item.Pictures.Value.Count; i++)
                                            {
                                                var imgPath = Url.Content($"~/{FileHandler.ImgDirectory}/{item.Pictures.Value[i].File}");
                                                <li>
                                                    <img class="hidden" src="@imgPath">
                                                    @SharedLocalizer[SharedResource.Picture] @(i + 1)
                                                </li>
                                            }
                                        </ul>
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <span class="text-gray text-justify description">
                                        @item.Description
                                    </span>
                                }
                            </div>
                            <div class="button">
                                @if (User.IsInRole(Role.SuperAdmin.ToString()) || User.IsInRole(Role.Admin.ToString()))
                                {
                                    <a asp-page="@typeof(AddModel).Page()" asp-route-id="@item.Id" class="btn btn-sm btn-warning @disabledClass">@SharedLocalizer["Edit"]</a>
                                    <a asp-controller="Remove" asp-action="PropertyAsync" asp-route-id="@item.Id" data-confirm="@SharedLocalizer["AreYouSureToDoThisRequest"]" class="btn btn-sm btn-danger">@disabledTerm</a>
                                }
                            </div>
                        </div>
                        <vc:log logs="@item.Logs" cat="Property" id="@item.Id" />
                    </div>
                }

            }
            else
            {
                <div class="row justify-content-center align-items-center">
                    <h5>
                        @SharedLocalizer["NoItemToShow"]
                    </h5>
                </div>
            }
            <vc:pagination model="@Model.List" />
        </section>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/jquery.bsPhotoGallery-min.css" asp-append-version="true" />
}
@section Scripts
{
    <script src="~/js/jquery.bsPhotoGallery-min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {

            const opts = {
                "classes": "",
                "hasModal": true
            }
            $('.gallery').bsPhotoGallery(opts);
        });
    </script>
}