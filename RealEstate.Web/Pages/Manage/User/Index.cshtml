@page
@model IndexModel
@{
    var roles = SelectItemExtensions.ToSelectList<Role>().AddNone();
}
<div class="col-12">
    <div class="status-message @(Model.Status == StatusEnum.Ready ? "hidden" : "")" asp-validation-summary="All">
        @Model.Status.GetDisplayName()
    </div>
    <div class="widget">
        <widget-header title="@Model.PageTitle">
            <a asp-page="@typeof(AddModel).Page()">@SharedLocalizer["NewUser"]</a>
        </widget-header>
        <section class="container-fluid">
            <form method="post">
                <div class="row justify-content-center align-items-center margin-bottomed">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a class="card-link" data-toggle="collapse" href="#search">
                                    @SharedLocalizer["Search"]
                                </a>
                                <a class="card-link clearSearch" asp-page="@typeof(IndexModel).Page()">
                                    @SharedLocalizer["ClearSearch"]
                                </a>
                            </div>
                            <div id="search" class="collapse @(Model.SearchInput.IsUnderCondition ? "show" : "")">
                                <div class="card-body">
                                    <div class="row justify-content-center align-items-center">
                                        <input asp-for="SearchInput.PageNo" />
                                        <div class="col-xs-12 col-md margin-bottomed">
                                            <div class="input-wrapper">
                                                <label class="control-label" asp-for="SearchInput.Username"></label>
                                                <input asp-for="SearchInput.Username" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md margin-bottomed">
                                            <div class="input-wrapper">
                                                <label class="control-label" asp-for="SearchInput.Role"></label>
                                                <select asp-for="SearchInput.Role" asp-items="roles" class="custom-select"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <vc:admin-search-condition model="@Model.SearchInput" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            @if (Model.List.Items?.Any() == true)
            {
                foreach (var item in Model.List.Items)
                {
                    if (item.Role == Role.SuperAdmin && !User.IsInRole(Role.SuperAdmin.ToString()))
                    {
                        continue;
                    }

                    var disabledClass = item.IsDeleted ? "disabled" : "";
                    var disabledTerm = item.IsDeleted ? SharedLocalizer["Activate"] : SharedLocalizer["Deactivate"];
                    <div class="row justify-content-center itemShow @disabledClass">
                        <div class="col-12 detail">
                            <div class="info">
                                <span>
                                    <b class="title">
                                        @item.Username
                                    </b>
                                    <span class="badge badge-warning"><b>@SharedLocalizer["Password"]:</b> @item.EncryptedPassword.Cipher(CryptologyExtension.CypherMode.Decryption)</span>
                                    <a asp-page="@typeof(IndexModel).Page()" asp-route-userRole="@item.Role.ToString()" class="badge badge-danger"><b>@SharedLocalizer["Role"]:</b> @item.Role.GetDisplayName()</a>
                                </span>
                                <span>
                                    @SharedLocalizer["Employee"] :
                                    <ul class="info-breadcrumb">
                                        @if (item.Employee != null)
                                        {
                                            <li>
                                                <a asp-page="@typeof(Employee.IndexModel).Page()" asp-route-userId="@item.Id">
                                                    @item.Employee?.FirstName، @item.Employee?.LastName
                                                </a>
                                            </li>
                                            <li>
                                                <a href="tel:@item.Employee?.Mobile">
                                                    @item.Employee?.Mobile
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                غیرفعال شده است
                                            </li>
                                        }
                                    </ul>
                                </span>

                                @if (item.UserItemCategories?.Any() == true)
                                {
                                    <span>
                                        @SharedLocalizer["UserItemCategories"] :
                                        <ul class="info-breadcrumb">
                                            @foreach (var feature in item.UserItemCategories)
                                            {
                                                <text>
                                                    <li>@feature.Category?.Name</li>
                                                </text>
                                            }
                                        </ul>
                                    </span>

                                }
                                @if (item.UserPropertyCategories?.Any() == true)
                                {
                                    <span>
                                        @SharedLocalizer["UserPropertyCategories"] :
                                        <ul class="info-breadcrumb">
                                            @foreach (var feature in item.UserPropertyCategories)
                                            {
                                                <text>
                                                    <li>@feature.Category?.Name</li>
                                                </text>
                                            }
                                        </ul>
                                    </span>

                                }
                            </div>
                            <div class="button">
                                <a asp-page="@typeof(Employee.IndexModel).Page()" asp-route-userId="@item.Id" class="btn btn-sm btn-primary">مشخصات کارمند</a>
                                @if (User.IsInRole(Role.SuperAdmin.ToString()))
                                {
                                    <a asp-page="@typeof(AddModel).Page()" asp-route-id="@item.Id" class="btn btn-sm btn-warning @disabledClass">@SharedLocalizer["Edit"]</a>

                                    if (User.Identity.Name != item.Username)
                                    {
                                        <a asp-controller="Remove" asp-action="UserDeActivateAsync" asp-route-id="@item.Id" data-confirm="@SharedLocalizer["AreYouSureToDoThisRequest"]" class="btn btn-sm btn-danger">@disabledTerm</a>
                                    }
                                }
                            </div>
                        </div>
                        <vc:log logs="@item.Logs" cat="User" id="@item.Id" />
                    </div>
                }

            }
            else
            {
                <div class="row justify-content-center align-items-center">
                    <h5>
                        @SharedLocalizer["NoItemToShow"]
                    </h5>
                </div>
            }
            <vc:pagination model="@Model.List"></vc:pagination>
        </section>
    </div>
</div>