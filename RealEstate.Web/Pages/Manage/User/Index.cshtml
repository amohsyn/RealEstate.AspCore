@page
@model IndexModel
@{
    var roles = SelectItemExtensions.ToSelectList<Role>().AddNone();
}
<div class="col-12">
    <div class="widget">
        <widget-header title="@Model.PageTitle">
            <a asp-page="@typeof(AddModel).Page()">@SharedLocalizer["NewUser"]</a>
        </widget-header>
        <section class="container-fluid">
            <div class="row justify-content-center align-items-center margin-bottomed">
                <div class="col-12">
                    <form method="post" class="widget mini-widget bg-white">
                        <input asp-for="SearchInput.PageNo" />
                        <widget-header title="@SharedLocalizer["Search"]"></widget-header>
                        <section class="container-fluid margin-bottomed">
                            <div class="row">
                                <div class="col-6 col-lg-3 margin-bottomed">
                                    <label class="control-label" asp-for="SearchInput.UserId"></label>
                                    <input asp-for="SearchInput.UserId" class="form-control" />
                                </div>
                                <div class="col-6 col-lg-3 margin-bottomed">
                                    <label class="control-label" asp-for="SearchInput.Username"></label>
                                    <input asp-for="SearchInput.Username" class="form-control" />
                                </div>
                            </div>
                        </section>
                        <widget-footer>
                            <widget-footer-text></widget-footer-text>
                            <widget-footer-button>
                                <input type="submit" value="@SharedLocalizer["Search"]" class="btn btn-primary" />
                            </widget-footer-button>
                        </widget-footer>
                    </form>
                </div>
            </div>
            @if (Model.List.Items?.Any() == true)
            {
                foreach (var item in Model.List.Items)
                {
                    if (item.Role == Role.SuperAdmin && !User.IsInRole(Role.SuperAdmin.ToString()))
                    {
                        continue;
                    }

                    var disabledClass = item.IsDeleted ? "disabled" : "";
                    var disabledTerm = item.IsDeleted ? SharedLocalizer["Activate"] : SharedLocalizer["Deactivate"];
                    <div class="row justify-content-center itemShow @disabledClass">
                        <div class="col-12 detail">
                            <div class="info">
                                <span>
                                    <b class="title">
                                        @item.Username
                                    </b>
                                    <span class="badge badge-primary">@item.Employee.FirstName، @item.Employee.LastName</span>
                                    @if (!string.IsNullOrEmpty(item.Employee.Mobile))
                                    {
                                        <span class="badge badge-secondary">@item.Employee.Mobile</span>
                                    }
                                    <span class="badge badge-warning"><b>@SharedLocalizer["Password"]:</b> @item.EncryptedPassword.Cipher(CryptologyExtension.CypherMode.Decryption)</span>
                                    @if (!string.IsNullOrEmpty(item.Employee.Address))
                                    {
                                        <span class="badge badge-success"><b>@SharedLocalizer["Address"]:</b> @item.Employee.Address</span>
                                    }
                                    <a asp-page="@typeof(IndexModel).Page()" asp-route-role="@item.Role.ToString()" class="badge badge-danger"><b>@SharedLocalizer["Role"]:</b> @item.Role.GetDisplayName()</a>
                                </span>
                                @if (item.UserItemCategories?.Any() == true || item.UserPropertyCategories?.Any() == true)
                                {
                                    <span>
                                        @if (item.UserItemCategories?.Any() == true)
                                        {
                                            foreach (var category in item.UserItemCategories)
                                            {
                                                <span class="badge badge-success">@category.Category.Name</span>
                                            }
                                        }
                                        @if (item.UserPropertyCategories?.Any() == true)
                                        {
                                            foreach (var category in item.UserPropertyCategories)
                                            {
                                                <span class="badge badge-primary">@category.Category.Name</span>
                                            }
                                        }
                                    </span>
                                }
                            </div><div class="button">
                                @if (User.IsInRole(Role.SuperAdmin.ToString()))
                                {
                                    <a asp-page="@typeof(AddModel).Page()" asp-route-id="@item.Id" class="btn btn-sm btn-warning @disabledClass">@SharedLocalizer["Edit"]</a>

                                    if (User.Identity.Name != item.Username)
                                    {
                                        <a asp-controller="Remove" asp-action="UserDeActivateAsync" asp-route-id="@item.Id" data-confirm="@SharedLocalizer["AreYouSureToDoThisRequest"]" class="btn btn-sm btn-danger">@disabledTerm</a>
                                    }
                                }
                            </div>
                        </div>
                        @if (item.Role != Role.SuperAdmin)
                        {
                            <vc:log logs="@item.Logs"></vc:log>
                        }
                    </div>
                }

            }
            else
            {
                <div class="row justify-content-center align-items-center">
                    <h5>
                        @SharedLocalizer["NoItemToShow"]
                    </h5>
                </div>
            }
            <vc:pagination model="@Model.List"></vc:pagination>
        </section>
    </div>
</div>